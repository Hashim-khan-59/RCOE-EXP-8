#include<stdio.h>
int main()
{
    char str[100];
    int length = 0; // variable
    
    printf("\t\t\t*** String Length Finder ***\n\n\n");
    printf("Enter Your String : ");
    gets(str);
    
    // Loop to find the null terminator
    while(str[length] != '\0')
    {
        length++;
    }
    
    printf("string length: %d Characters\n", length); // Added \n for clean output
    return 0;
}
