#include <stdio.h>

int main() {
    char str[100];
    int length = 0;

    printf("\t\t\t*** String Length Finder ***\n\n\n");
    printf("Enter Your String : ");
    fgets(str, sizeof(str), stdin);

    while (str[length] != '\0') {
        length++;
    }

    if (length > 0 && str[length - 1] == '\n') {
        length--; 
    }

    printf("String length: %d Characters\n", length);
    return 0;
}
